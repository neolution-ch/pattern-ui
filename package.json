{
  "name": "@neolution-ch/react-pattern-ui",
  "version": "1.0.10",
  "description": "Some basic functions and components which are needed in most of projects.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neolution-ch/react-pattern-ui"
  },
  "license": "MIT",
  "author": "Neolution",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "shx rm -rf dist && microbundle --no-compress --tsconfig ./tsconfig.microbundle.json",
    "lint": "eslint \"**/*.{ts,tsx}\" --cache --max-warnings 0",
    "prepack": "yarn build",
    "prettier-check": "prettier --check .",
    "start": "microbundle watch --no-compress --tsconfig ./tsconfig.microbundle.json",
    "start-all": "concurrently \"yarn start\" \"yarn start-yalc\"",
    "start-yalc": "yarn nodemon --watch dist -x \"yarn yalc push\"",
    "test": "cross-env DEBUG_PRINT_LIMIT=100 jest",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "@testing-library/dom": "^7.30.3",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.1.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/reactstrap": "^8.7.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.1.4",
    "microbundle": "^0.14.2",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reactstrap": "^8.0.0",
    "shx": "^0.3.3",
    "ts-jest": "^27.1.4",
    "typescript": "^4.2.3",
    "yalc": "^1.0.0-pre.53"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reactstrap": "^8.0.0"
  },
  "engines": {
    "node": ">=14"
  }
}
